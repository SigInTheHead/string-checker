{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./bin",
    "baseUrl": ".",
    "alwaysStrict": false,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/tests/*",
    "**/*.spec.*"
  ]
}
